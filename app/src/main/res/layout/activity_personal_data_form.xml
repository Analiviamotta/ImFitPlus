<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PersonalDataFormActivity">
    <TextView
        android:id="@+id/title_header"
        android:text="@string/personal_data"

        android:padding="16dp"
        android:textSize="25sp"
        android:textAlignment="textStart"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nameTv"
        android:text="@string/name"

        android:textColor="@color/black"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingHorizontal="16dp"
        android:paddingBottom="4dp"

        app:layout_constraintTop_toBottomOf="@id/title_header" />


    <EditText
        android:id="@+id/nameEt"
        android:autofillHints="name"
        android:inputType="text"
        android:labelFor="@id/nameTv"

        android:textColor="@color/black"
        android:background="@android:drawable/edit_text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_placeholder"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintTop_toBottomOf="@id/nameTv" />

    <TextView
        android:id="@+id/ageTv"
        android:text="@string/age"

        android:textColor="@color/black"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"

        app:layout_constraintTop_toBottomOf="@id/nameEt" />


    <EditText
        android:id="@+id/ageEt"
        android:autofillHints="age"
        android:inputType="number"
        android:labelFor="@id/ageTv"

        android:textColor="@color/black"
        android:background="@android:drawable/edit_text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/age_placeholder"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintTop_toBottomOf="@id/ageTv" />

    <TextView
        android:id="@+id/genderTv"
        android:text="@string/gender"

        android:textColor="@color/black"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"

        app:layout_constraintTop_toBottomOf="@id/ageEt" />
    
    <RadioGroup
        android:id="@+id/genderRg"

        android:orientation="horizontal"

        android:paddingHorizontal="16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/genderTv">
        <RadioButton
            android:id="@+id/femaleRb"
            android:text="@string/female"

            android:checked="true"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:buttonTint="@color/rose"
            app:buttonTint="@color/rose"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/maleRb"

            android:text="@string/male"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:buttonTint="@color/rose"
            app:buttonTint="@color/rose"
            android:layout_height="wrap_content" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>