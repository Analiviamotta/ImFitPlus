<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PersonalDataFormActivity">

    <TextView
        android:id="@+id/title_header"
        android:text="@string/personal_data"

        android:padding="16dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"

        android:textAlignment="textStart"
        android:textColor="@color/rose"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"


        app:layout_constraintTop_toBottomOf="@id/title_header"
        app:layout_constraintBottom_toTopOf="@id/calculateIMCBt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTv"
                android:text="@string/name"
                android:labelFor="@id/nameEt"

                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingHorizontal="16dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/nameEt"
                android:inputType="text"
                android:autofillHints="name"
                android:hint="@string/name_placeholder"

                android:textColor="@color/black"

                android:background="@android:drawable/edit_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp" />

            <TextView
                android:id="@+id/ageTv"
                android:text="@string/age"
                android:labelFor="@id/ageEt"

                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/ageEt"
                android:autofillHints=""
                android:inputType="number"
                android:hint="@string/age_placeholder"

                android:textColor="@color/black"

                android:background="@android:drawable/edit_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="16dp" />

            <TextView
                android:id="@+id/genderTv"
                android:text="@string/gender"
                android:labelFor="@id/genderRg"

                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <RadioGroup
                android:id="@+id/genderRg"
                android:orientation="horizontal"

                android:paddingHorizontal="16dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/femaleRb"
                    android:checked="true"
                    android:text="@string/female"

                    android:layout_width="0dp"
                    android:layout_weight="1"

                    app:buttonTint="@color/rose"
                    android:buttonTint="@color/rose"

                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/maleRb"
                    android:text="@string/male"

                    android:layout_width="0dp"
                    android:layout_weight="1"

                    app:buttonTint="@color/rose"
                    android:buttonTint="@color/rose"

                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:id="@+id/heightTv"
                android:labelFor="@id/heightEt"
                android:text="@string/height"

                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/heightEt"
                android:inputType="numberDecimal"
                android:hint="@string/height_placeholder"

                android:autofillHints=""
                android:textColor="@color/black"

                android:background="@android:drawable/edit_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="16dp" />

            <TextView
                android:id="@+id/weightTv"
                android:text="@string/weight"
                android:labelFor="@id/weightEt"

                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/weightEt"
                android:inputType="numberDecimal"
                android:hint="@string/weight_placeholder"

                android:autofillHints=""

                android:textColor="@color/black"
                android:background="@android:drawable/edit_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="16dp" />

            <TextView
                android:id="@+id/physicalActivityLevelTv"

                android:text="@string/physical_activity_level"
                android:labelFor="@id/physicalActivityLevelSp"
                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/physicalActivityLevelSp"
                android:entries="@array/physical_activity_levels_array"

                android:minHeight="48dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/calculateIMCBt"

        android:textSize="16sp"
        android:text="@string/calculate_imc_button_label"

        android:backgroundTint="@color/rose"

        android:layout_marginVertical="8dp"

        android:layout_marginHorizontal="16dp"
        android:padding="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>